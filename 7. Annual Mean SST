import seaborn as sns
import matplotlib.pyplot as plt
import pandas as pd

df = pd.read_csv("/content/updatedGulfOfKachchh_SST_An.csv")
df["year"] = df["year"].astype(str)   # <-- convert to category/label instead of number

plt.figure(figsize=(14,6))

# Dot plot
sns.scatterplot(
    data=df,
    x="year",
    y="annual_mean_SST_C",
    s=160,
    color="red",
    zorder=3
)

plt.plot(
    df["year"],
    df["annual_mean_SST_C"],
    color="gray",
    linestyle="--",
    alpha=0.5,
    zorder=2
)

# Styling
plt.title("Annual Mean SST — Gulf of Kachchh", fontsize=18, fontweight="bold")
plt.xlabel("Year", fontsize=14)
plt.ylabel("Mean SST (°C)", fontsize=14)
plt.grid(axis="y", linestyle="--", alpha=0.3)

plt.xticks(rotation=0, fontsize=12)
plt.yticks(fontsize=12)

plt.tight_layout()
plt.show()
