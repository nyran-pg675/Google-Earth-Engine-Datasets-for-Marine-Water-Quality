import rasterio
import matplotlib.pyplot as plt
from rasterio.plot import show
import numpy as np

# Path to your NDTI TIFF file
tiff_path = "/content/sentinel2_ndti_kar2024.tif"

# Open the raster
with rasterio.open(tiff_path) as src:
    ndti = src.read(1)   # Read band 1 (NDTI index)
    profile = src.profile

# Mask invalid values (optional)
ndti = np.where((ndti < -1) | (ndti > 1), np.nan, ndti)

# Plotting
plt.figure(figsize=(10, 8))
plt.imshow(ndti, cmap="RdYlGn", vmin=-1, vmax=1)
plt.colorbar(label="NDTI (Normalized Difference Turbidty Index)")
plt.title("NDTI Visualization - Kaivak Area (2024)")
plt.axis("off")
plt.tight_layout()
plt.show()
